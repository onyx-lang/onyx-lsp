    "version": "0.2.0",
    "configurations": [
        {
            "name": "Onyx Attach",
            "type": "onyx",
            "request": "attach",
            "stopOnEntry": true,
            "socketPath": "/tmp/ovm-debug.0000"
        },
        {
            "name": "Onyx Launch",
            "type": "onyx",
            "request": "launch",
            "wasmFile": "out.wasm",
            "workingDir": "${workspaceFolder}",
            "stopOnEntry": true
        }
    ]
}